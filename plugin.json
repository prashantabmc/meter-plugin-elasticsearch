	"ELASTIC_SEARCH_INITIALISING_SHARDS",
	"ELASTIC_SEARCH_UNASSIGNED_SHARDS",
	"ELASTIC_SEARCH_JVM_UPTIME_IN_MILLIS",
	"ELASTIC_SEARCH_JVM_MEM_HEAP_USED_PERCENT",
