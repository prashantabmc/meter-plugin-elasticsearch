            "layout" : "d-w=3&d-h=5&d-pad=5&d-light=0&d-bg=none&d-g-ELASTIC_SEARCH_STATUS=0-0-1-1&d-g-ELASTIC_SEARCH_COMPLETION_SIZE=1-0-1-1&d-g-ELASTIC_SEARCH_FIELDDATA_EVICTIONS=0-1-1-1&d-g-ELASTIC_SEARCH_FIELDDATA_MEMORY_SIZE=0-2-1-1&d-g-ELASTIC_SEARCH_INDEX_COUNT=0-3-1-1&d-g-ELASTIC_SEARCH_NODE_COUNT=1-3-1-1&d-g-ELASTIC_SEARCH_DOCUMENT_COUNT=2-3-1-1&d-g-ELASTIC_SEARCH_PRIMARY_SHARDS=2-0-1-1&d-g-ELASTIC_SEARCH_TOTAL_SHARDS=0-4-1-1&d-g-ELASTIC_SEARCH_STORE_SIZE=2-4-1-1&d-g-ELASTIC_SEARCH_SEGMENT_COUNT=1-4-1-1&d-g-ELASTIC_SEARCH_QUERY_CACHE_EVICTIONS=1-1-2-1&d-g-ELASTIC_SEARCH_QUERY_CACHE_MEMORY_SIZE=1-2-2-1" 
    	},
    	{
    	    "name" : "Elasticsearch",
            "layout" : "d-w=4&d-h=4&d-pad=5&d-light=0&d-bg=none&d-g-ELASTIC_SEARCH_STATUS=0-0-1-1&d-g-ELASTIC_SEARCH_COMPLETION_SIZE=1-0-1-1&d-g-ELASTIC_SEARCH_FIELDDATA_EVICTIONS=0-1-1-1&d-g-ELASTIC_SEARCH_FIELDDATA_MEMORY_SIZE=0-2-1-1&d-g-ELASTIC_SEARCH_INDEX_COUNT=0-3-1-1&d-g-ELASTIC_SEARCH_NODE_COUNT=1-3-1-1&d-g-ELASTIC_SEARCH_DOCUMENT_COUNT=2-3-1-1&d-g-ELASTIC_SEARCH_PRIMARY_SHARDS=2-0-1-1&d-g-ELASTIC_SEARCH_SEGMENT_COUNT=2-1-1-1&d-g-ELASTIC_SEARCH_STORE_SIZE=3-0-1-1&d-g-ELASTIC_SEARCH_TOTAL_SHARDS=3-3-1-1&d-g-ELASTIC_SEARCH_FILTER_CACHE_EVICTIONS=1-1-1-1&d-g-ELASTIC_SEARCH_FILTER_CACHE_MEMORY_SIZE=1-2-1-1&d-g-ELASTIC_SEARCH_ID_CACHE_MEMORY_SIZE=2-2-1-1" 
    	}
    	],
    "paramSchema": [
        {
            "title": "Elasticsearch Stats URL",
            "name": "stats_url",
            "description": "The URL to Elasticsearch's cluster stats API endpoint",
            "type": "string",
            "default": "http://127.0.0.1:9200/_cluster/stats",
            "required": true
        },
        {
            "title": "Poll Interval (ms)",
            "name": "pollInterval",
            "description": "How often should the plugin poll (in milliseconds) for metrics.",
            "type" : "integer",
            "default" : 1000 
        },
        {
            "title" : "Source",
            "name" : "source",
            "description" : "The Source to display in the legend for the metrics data.  It will default to the hostname of the server",
            "type" : "string",
	    "required" : false
        }
    ]
}
